<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

  <ThingDef ParentName="BuildingBase">
    <defName>CraftingSpot</defName>
    <label>dangerous crafting spot</label>
    <Description>A dangerous place for crafting simple things like shivs or bows.</Description>
    <ThingClass>Building_WorkTable</ThingClass>
    <graphicData>
      <texPath>Things/Building/Production/CraftingSpot</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
    </graphicData>
    <AltitudeLayer>FloorEmplacement</AltitudeLayer>
    <statBases>
      <WorkToBuild>0</WorkToBuild>
    </statBases>
		<scatterableOnMapGen>false</scatterableOnMapGen>
		<useHitPoints>False</useHitPoints>
    <Size>(4,4)</Size>
    <DesignationCategory>Production</DesignationCategory>
    <Passability>Standable</Passability>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
      <sowTag>SupportPlantsOnly</sowTag>
      <canPlaceOverImpassablePlant>false</canPlaceOverImpassablePlant>
      <ai_chillDestination>false</ai_chillDestination>
    </building>
    <tickerType>Normal</tickerType>
    <comps>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>ToolCabinet</li>
        </linkableFacilities>
      </li>
	  <li Class="HediffGiver.CompProperties_HediffGiver">
		<compClass>HediffGiver.CompHediffGiver</compClass>
		<damageAmount>1</damageAmount>
		<damageDef>Crush</damageDef>
		<affectInteractionCell>true</affectInteractionCell>
		<affectAdjacentCells>true</affectAdjacentCells>
		<damagesSelf>false</damagesSelf>
		<ticksBetweenDamage>20</ticksBetweenDamage>
	  </li>
    </comps>
    <designationHotkey>Misc1</designationHotkey>
  </ThingDef>
</ThingDefs>